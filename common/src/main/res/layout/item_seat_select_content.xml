<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/itemSeatSelectContentFl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/level_seat_type_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemSeatSelectContentIvIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/itemSeatSelectContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:text="后左"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sizeSmall" />
        </LinearLayout>

        <ImageView
            android:id="@+id/itemSeatSelectContentIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom" />
    </FrameLayout>
</FrameLayout>
