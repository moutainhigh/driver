<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_white_4dp_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:src="@mipmap/order_del"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="删除订单后将无法恢复，您将无法继\n续对它进行后续操作"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeContent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_del_pos"
            android:layout_width="0dp"
            android:layout_height="@dimen/sizeButtonHeight"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@drawable/corners_black_4dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dialog_del_nega"
            android:layout_width="0dp"
            android:layout_height="@dimen/sizeButtonHeight"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/cor4_st1_black"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorBlack" />

    </LinearLayout>
</LinearLayout>