<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_photo" />

        </FrameLayout>


        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_no" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_car_no"
                android:inputType="text" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_name" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>


        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_model" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>


        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_license_color" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_color" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_type" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_use" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_oil" />

            <TextView
                style="@style/RegisterEnd"
                android:drawableEnd="@mipmap/com_right_arrow"
                android:drawablePadding="4dp"
                tools:text="XX" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_seat" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_seat"
                android:inputType="number" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_km" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_km"
                android:inputType="numberDecimal" />

        </FrameLayout>


        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_car_vin" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_car_vin"
                android:inputType="none" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_buy_date" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_buy_date"
                android:inputType="date" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_register_date" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_register_date"
                android:inputType="date" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <FrameLayout style="@style/Register">

            <TextView
                style="@style/RegisterStart"
                android:text="@string/com_check_date" />

            <EditText
                style="@style/RegisterEnd"
                android:hint="@string/com_input_check_date"
                android:inputType="date" />

        </FrameLayout>

        <View style="@style/RegisterLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f7f7f7"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/com_pic_info"
            android:textColor="#999999"
            android:textSize="14dp" />

        <View style="@style/RegisterLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/com_car_license"
            android:textColor="#333333"
            android:textSize="14dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/com_transportation_license"
            android:textColor="#333333"
            android:textSize="14dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/com_corners_blue"
            android:text="@string/com_commit"
            android:textColor="#fff"
            android:textSize="18dp" />


    </LinearLayout>

</ScrollView>