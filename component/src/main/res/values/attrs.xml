<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 为CircleImageView声明属性空间-->
    <declare-styleable name="CircleImageView">
        <attr name="imv_border_width" format="dimension" />  <!-- 图像周围描边的宽度 -->
        <attr name="imv_border_color" format="color" />  <!-- 描边的颜色-->
    </declare-styleable>

    <!--MultiStateViews自定义属性-->
    <declare-styleable name="MultiStateView">
        <attr name="loadingView" format="reference" /> <!--加载中布局-->
        <attr name="errorView" format="reference" /><!--失败布局-->
        <attr name="emptyView" format="reference" /><!--空白布局-->
        <attr name="otherView" format="reference" /><!--备用布局布局-->
    </declare-styleable>

    <!--RatingBar自定义属性-->
    <declare-styleable name="RatingBar">
        <attr name="starDistance" format="dimension" />  <!--星星间距-->
        <attr name="starSize" format="dimension" /><!--星星大小-->
        <attr name="starCount" format="integer" /><!--星星个数-->
        <attr name="starEmpty" format="reference" /><!--星星空图-->
        <attr name="starFill" format="reference" /><!--星星满图-->
        <attr name="isIndicator" format="boolean" /><!--是否只用作展示-->
        <attr name="stepSize" format="float" />  <!-- 分数步长-->
    </declare-styleable>

    <!--侧滑菜单属性声明-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>


    <!--数字进度条-->
    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference" />
    </declare-styleable>

    <!--自定义switchButton-->
    <declare-styleable name="SwitchButton">
        <attr name="kswThumbDrawable" format="reference" />
        <attr name="kswThumbColor" format="color|reference" />
        <attr name="kswThumbMargin" format="dimension|reference" />
        <attr name="kswThumbMarginTop" format="dimension|reference" />
        <attr name="kswThumbMarginBottom" format="dimension|reference" />
        <attr name="kswThumbMarginLeft" format="dimension|reference" />
        <attr name="kswThumbMarginRight" format="dimension|reference" />
        <attr name="kswThumbWidth" format="dimension|reference" />
        <attr name="kswThumbHeight" format="dimension|reference" />
        <attr name="kswThumbRadius" format="dimension|reference" />
        <attr name="kswBackRadius" format="dimension|reference" />
        <attr name="kswBackDrawable" format="reference" />
        <attr name="kswBackColor" format="color|reference" />
        <attr name="kswFadeBack" format="boolean" />
        <attr name="kswBackMeasureRatio" format="float" />
        <attr name="kswAnimationDuration" format="integer" />
        <attr name="kswTintColor" format="color|reference" />
        <attr name="kswTextOn" format="string" />
        <attr name="kswTextOff" format="string" />
        <attr name="kswTextMarginH" format="dimension" />
        <attr name="kswAutoAdjustTextPosition" format="boolean" />
    </declare-styleable>

    <!---->
    <declare-styleable name="XBottomBehavior">
        <!--底部显示出来部分-->
        <attr name="x_peekHeight" format="dimension" />
        <!--距离顶部的距离-->
        <attr name="x_margin_top" format="dimension" />
    </declare-styleable>

    <!--VerifyCodeView attribute-->
    <declare-styleable name="VerifyCodeView">
        <attr name="boxSpace" format="dimension" />
        <attr name="boxPadding" format="dimension" />
        <attr name="boxNum" format="integer" />
        <attr name="borderWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="boxBackground" format="color" />
        <attr name="borderRadius" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderSelectedColor" format="color" />
        <attr name="showCursor" format="boolean" />
        <attr name="inputType" format="string" />
    </declare-styleable>

    <!--水平的loadView-->
    <declare-styleable name="HLoadView">
        <attr name="hlv_color" format="color|reference" />
        <attr name="hlv_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="SlideView">
        <attr name="maskText" format="string" />
        <attr name="maskTextSize" format="dimension" />
        <attr name="maskTextMarginLeft" format="dimension" />
        <attr name="maskTextMarginTop" format="dimension" />
        <attr name="slider" format="reference" />
        <attr name="sliderMarginLeft" format="dimension" />
        <attr name="sliderMarginTop" format="dimension" />
        <attr name="slidableLength" format="dimension" />
        <attr name="effectiveLength" format="dimension" />
        <attr name="effectiveVelocity" format="dimension" />
        <attr name="sliderHeight" format="dimension" />
        <attr name="sliderWidth" format="dimension" />
    </declare-styleable>
</resources>