<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easymi.component">

    <application>

        <activity
            android:name=".activity.WebActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.amap.api.navi.AmapRouteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".activity.PlaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <service
            android:name=".loc.LocService"
            android:process=":remote1">
            <intent-filter>
                <action android:name="com.easymi.eomponent.START_LOC" />
                <action android:name="com.easymi.eomponent.STOP_LOC" />
            </intent-filter>
        </service>

        <service
            android:name=".loc.LocationHelperService"
            android:process=":remote2">
            <intent-filter>
                <action android:name="com.easymi.component.loc.ACTIVATE" />
            </intent-filter>
        </service>

    </application>
</manifest>
