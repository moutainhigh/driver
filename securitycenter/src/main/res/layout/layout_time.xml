<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置生效时间段"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该时间段的行程信息会通过短信自动分享给紧急联系人"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/color_666666"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <cn.projcet.hf.securitycenter.widget.wheelview.WheelView
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <cn.projcet.hf.securitycenter.widget.wheelview.WheelView
            android:id="@+id/center_hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="到"-->
            <!--android:textColor="@color/color_333333"-->
            <!--android:textSize="17sp"-->
            <!--android:gravity="center"/>-->

        <cn.projcet.hf.securitycenter.widget.wheelview.WheelView
            android:id="@+id/end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_line_4dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_color_2c3c55_4dp"/>
    </LinearLayout>
</LinearLayout>