<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.projcet.hf.securitycenter.widget.CusToolbar
        android:id="@+id/cus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f3f4f5">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"
                android:textColor="@color/color_333333" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请输入联系人电话"
                android:textColor="@color/color_999999"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="@color/color_999999"/>
            <TextView
                android:id="@+id/tv_tongxunlu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="通讯录"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="5dp"
                android:textColor="@color/color_red"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/color_eeeeee"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="@color/color_333333" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint=""
                android:textColor="@color/color_999999"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="@color/color_999999"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/color_eeeeee"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_f3f4f5">
            <TextView
                android:id="@+id/tv_zengjia"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_color_2c3c55_4dp"
                android:layout_marginTop="40dp"
                android:text="确认新增"
                android:textSize="16sp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>