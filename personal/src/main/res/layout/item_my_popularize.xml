<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemMyPopularizeRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/itemMyPopularizeTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="张三"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeContent" />

    <TextView
        android:id="@+id/itemMyPopularizeTvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemMyPopularizeTvName"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:text="17608382596"
        android:textColor="@color/colorSub"
        android:textSize="@dimen/sizeContent" />

    <TextView
        android:id="@+id/itemMyPopularizeTvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="12dp"
        android:text="2019-01-01"
        android:textColor="@color/colorSub"
        android:textSize="@dimen/sizeContent" />

    <TextView
        android:id="@+id/itemMyPopularizeTvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/itemMyPopularizeTvPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-2dp"
        android:drawableEnd="@drawable/more_1x"
        android:gravity="center"
        android:paddingEnd="12dp"
        android:text="¥5400.00"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeContent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sizeLine"
        android:layout_below="@id/itemMyPopularizeTvMoney"
        android:layout_marginTop="16dp"
        android:background="@color/colorLine" />

</RelativeLayout>