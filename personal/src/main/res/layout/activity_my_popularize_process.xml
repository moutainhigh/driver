<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyPopularizeProcessActivity">

    <com.easymi.component.widget.CusToolbar
        android:id="@+id/myPopularizeProcessCtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_white_4dp"
            android:divider="@drawable/divider"
            android:dividerPadding="12dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="申请时间"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sizeContent" />

                <TextView
                    android:id="@+id/myPopularizeProcessTvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/sizeContent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="结算金额"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sizeContent" />

                <TextView
                    android:id="@+id/myPopularizeProcessTvPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/sizeContent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="审核状态"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sizeContent" />

                <TextView
                    android:id="@+id/myPopularizeProcessTvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/sizeContent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myPopularizeProcessLlDoingTime"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="审核时间"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sizeContent" />

                <TextView
                    android:id="@+id/myPopularizeProcessTvDoingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/sizeContent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/myPopularizeProcessLlReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/corners_white_4dp"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:text="审核回复"
                android:textColor="@color/black"
                android:textSize="@dimen/sizeContent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myPopularizeProcessTvReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:minHeight="44dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="结算金额将在2个工作日抵达"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/sizeContent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>