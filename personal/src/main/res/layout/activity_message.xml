<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easymi.component.widget.CusToolbar
        android:id="@+id/cus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:onClick="tuijian"
        android:gravity="center"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@mipmap/msg_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dcdcdc"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:onClick="toNotice"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/ic_trumpet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_trumpet"
                android:layout_margin="10dp"/>

            <View
                android:id="@+id/center_line"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ic_trumpet"
                android:layout_above="@+id/center_line"
                android:textSize="16sp"
                android:textColor="#232323"
                android:text="@string/msg_notify"/>
            <TextView
                android:id="@+id/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/ic_row_1"
                android:layout_toRightOf="@+id/ic_trumpet"
                android:layout_below="@+id/center_line"
                android:text="暂无通知"/>

            <ImageView
                android:id="@+id/ic_row_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_row"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ic_row_1"
                android:layout_above="@+id/center_line"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:text=""/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:onClick="toAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/ic_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_word"
                android:layout_margin="10dp"/>

            <View
                android:id="@+id/center_line_1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ic_word"
                android:layout_above="@+id/center_line_1"
                android:textSize="16sp"
                android:textColor="#232323"
                android:text="@string/msg_notice"/>
            <TextView
                android:id="@+id/announcement_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/ic_row_2"
                android:layout_toRightOf="@+id/ic_word"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@+id/center_line_1"
                android:text="暂无公告"/>

            <ImageView
                android:id="@+id/ic_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_row"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/announcement_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ic_row_2"
                android:layout_above="@+id/center_line_1"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:text=""/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>