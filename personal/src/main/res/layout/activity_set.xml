                    android:src="@mipmap/ic_row" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/dark_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
