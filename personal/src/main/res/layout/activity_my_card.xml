<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easymi.component.widget.CusToolbar
        android:id="@+id/cus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:background="@drawable/corners_white_4dp">
        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/photo_default"
            android:layout_marginTop="32dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="216dp"
            android:layout_height="216dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫上面的二维码，快速购票"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</LinearLayout>