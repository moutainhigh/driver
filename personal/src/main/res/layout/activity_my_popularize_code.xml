<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.MyPopularizeCodeActivity">

    <com.easymi.component.widget.CusToolbar
        android:id="@+id/myPopularizeCodeCtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:id="@+id/myPopularizeCodeFl"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_below="@id/myPopularizeCodeCtb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp">

        <ImageView
            android:id="@+id/myPopularizeCodeIv"
            android:layout_width="220dp"
            android:layout_height="220dp" />

        <ImageView
            android:visibility="gone"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:id="@+id/myPopularizeCodeIvIcon"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/myPopularizeCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myPopularizeCodeFl"
        android:lineSpacingExtra="2dp"
        android:paddingStart="40dp"
        android:paddingTop="18dp"
        android:paddingEnd="40dp"
        android:paddingBottom="46dp"
        android:text="您可以通过分享推广码的方式邀请用户成为平台乘客，也可以通过分发二维码的方式让用户扫码成为平台乘客。"
        android:textColor="@color/colorSub"
        android:textSize="@dimen/sizeContent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myPopularizeCodeTv"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/cor4_st1_line"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myPopularizeCodeTvWechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/my_popularizer_wechat"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sizeContent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myPopularizeCodeTvWechatCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/my_popularizer_wechat_circle"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sizeContent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/myPopularizeCodeTvDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/my_popularizer_download"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sizeContent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/myPopularizeCodeTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="分享到"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />


</RelativeLayout>