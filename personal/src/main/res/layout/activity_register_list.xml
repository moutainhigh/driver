<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easymi.component.widget.CusToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <com.easymi.component.widget.LoadingButton
                android:id="@+id/button_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="15dp"
                android:background="@drawable/p_corners_button_bg"
                android:gravity="center"
                android:text="@string/set_sure"
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_input_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>