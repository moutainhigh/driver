<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/notifity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2天前"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_margin="10dp"
        android:background="@drawable/corners_dcdcdc_big"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_white_stroke"
        android:minHeight="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/is_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/new_icon"/>

        <TextView
            android:id="@+id/notifity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了您的余额提现已经通过审核了"
            android:layout_margin="20dp"/>

    </RelativeLayout>

</LinearLayout>