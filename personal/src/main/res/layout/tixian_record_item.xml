<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="125dp">

    <ImageView
        android:id="@+id/ic_dian_1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12.5dp"
        android:src="@drawable/circle_e5e5e5"/>

    <ImageView
        android:id="@+id/ic_dian_2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="12.5dp"
        android:src="@drawable/circle_e5e5e5"/>

    <ImageView
        android:id="@+id/ic_dian_3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="12.5dp"
        android:src="@drawable/circle_e5e5e5"/>

    <ImageView
        android:id="@+id/ic_dian_4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/circle_e5e5e5"/>

    <ImageView
        android:id="@+id/ic_dian_5"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/circle_e5e5e5"/>

    <LinearLayout
        android:id="@+id/center_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/ic_time"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:src="@drawable/circle_accent"
            />

        <TextView
            android:id="@+id/tixian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-13 10:10"
            android:textColor="#333333"
            android:layout_marginLeft="15.5dp"
            android:layout_toRightOf="@+id/ic_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/center_con"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tixian_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥200.0"
            android:textColor="#999999"
            />

        <TextView
            android:id="@+id/tixian_refuse_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:text=""
            android:visibility="gone"
            android:textColor="#999999"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tixian_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已通过"
        android:textColor="#3c98e3"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="7.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="33.5dp"
        android:background="@color/dark_gray"/>

</RelativeLayout>