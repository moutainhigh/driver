<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cheating_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_white"
        android:elevation="0.5dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_mileage"
                android:textColor="#b5b5b5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/current_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38.0"
                android:textColor="#b5b5b5"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mileage_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_circle_selector"
                android:src="@drawable/ic_remove_black_24dp" />

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/mileage_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_ret"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#aa000000" />

                <!--<View-->
                <!--android:id="@+id/mileage_top"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:clickable="true" />-->

                <!--<TextView-->
                <!--android:id="@+id/current_mileage"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text=""-->
                <!--android:textColor="#b5b5b5"-->
                <!--android:textSize="16sp" />-->

            </FrameLayout>

            <ImageButton
                android:id="@+id/mileage_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_circle_selector"
                android:src="@drawable/ic_add_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_fee"
                android:textColor="#b5b5b5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/current_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78"
                android:textColor="#b5b5b5"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fee_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_circle_selector"
                android:src="@drawable/ic_remove_black_24dp" />

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/fee_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_ret"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#aa000000" />

                <!--<View-->
                <!--android:id="@+id/fee_top"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:clickable="true" />-->

            </FrameLayout>

            <ImageButton
                android:id="@+id/fee_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_circle_selector"
                android:src="@drawable/ic_add_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.easymi.component.widget.LoadingButton
                android:id="@+id/sure_change"
                android:layout_width="0.0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/corners_accent"
                android:elevation="0.5dp"
                android:gravity="center"
                android:text="@string/change_confirm"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cancel_change"
                android:layout_width="0.0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.7"
                android:background="@drawable/corners_404456"
                android:elevation="0.5dp"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_end_con"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/cheating_con"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_white_gray_stroke_2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/change_end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_end"
            android:textSize="8sp" />
    </LinearLayout>
</RelativeLayout>