<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/choice_pay_type"
                android:textColor="@color/text_color_black"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:src="@mipmap/ic_close_gray" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_pay_self" />

                <ImageView
                    android:id="@+id/pay_2_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/pay_type_balance" />

                <ImageView
                    android:id="@+id/pay_3_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_qiandan" />

                <ImageView
                    android:id="@+id/pay_4_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_help_pay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/img_1"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="@string/cus_pay"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pay_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/img_1"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="@string/cus_balance"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pay_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/img_1"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="@string/qiandan"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pay_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/img_1"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="@string/help_pay"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/pay_1_empty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <View
                    android:id="@+id/pay_2_empty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <View
                    android:id="@+id/pay_3_empty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <View
                    android:id="@+id/pay_4_empty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/pay_1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:button="@drawable/checkbox_button_bg_selector"
                    android:checked="false"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/pay_2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:button="@drawable/checkbox_button_bg_selector"
                    android:checked="false"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/pay_3_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:button="@drawable/checkbox_button_bg_selector"
                    android:checked="false"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/pay_4_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/checkbox_button_bg_selector"

                    android:gravity="center_vertical" />

            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corners_button_selector"
            android:text="@string/change_confirm"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>